---
import type { ProductCardProps } from '../types/sanity';

export interface Props extends ProductCardProps {}

const { _id, name, price, image, category = "Ver todos", discount, isNew = false, inStock = true, color, size } = Astro.props;
---

<a href={_id ? `/producto/${_id}` : '#'} class="block group relative bg-urban-gray rounded-xl overflow-hidden border border-gray-800 hover:border-urban-accent/50 transition-all duration-300 hover:shadow-2xl hover:shadow-urban-accent/20">
  <!-- Badges -->
  <div class="absolute top-3 left-3 z-10">
    {isNew && (
      <span class="bg-urban-secondary text-urban-black px-2 py-1 rounded-full text-xs font-bold">
        NUEVO
      </span>
    )}
    {discount && (
      <span class="bg-red-500 text-white px-2 py-1 rounded-full text-xs font-bold ml-2">
        -{discount}%
      </span>
    )}
    {!inStock && (
      <span class="bg-gray-600 text-white px-2 py-1 rounded-full text-xs font-bold ml-2">
        AGOTADO
      </span>
    )}
  </div>

  <!-- Image Container -->
  <div class="aspect-square overflow-hidden bg-gray-900 relative">
    <img 
      src={image} 
      alt={name}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
      loading="lazy"
    />
    <!-- Overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <div class="absolute bottom-4 left-4 right-4">
        <div class="w-full bg-urban-accent text-urban-black font-bold py-3 rounded-lg transform translate-y-6 group-hover:translate-y-0 transition-transform duration-300 text-center">
          Ver Producto
        </div>
      </div>
    </div>
  </div>

  <!-- Product Info -->
  <div class="p-4">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs text-gray-400 uppercase tracking-wider">{category}</span>
      <button class="text-gray-500 hover:text-urban-accent transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
      </button>
    </div>
    
    <h3 class="font-semibold text-lg mb-2 text-urban-white group-hover:text-urban-accent transition-colors">
      {name}
    </h3>
    
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <span class="text-xl font-bold text-urban-accent">{price}</span>
        {discount && (
          <span class="text-sm text-gray-500 line-through">
            ${parseInt(price.replace('$', '')) * 2}.00
          </span>
        )}
      </div>
      
      <div class="flex space-x-1">
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07.-3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      </div>
    </div>
    
    <!-- Product Details -->
    {(color || size) && (
      <div class="mt-3 pt-3 border-t border-gray-700">
        <div class="flex items-center justify-between text-sm text-gray-400">
          {color && (
            <div class="flex items-center space-x-2">
              <span>Color:</span>
              <div class="flex items-center space-x-1">
                <div 
                  class="w-4 h-4 rounded-full border border-gray-600" 
                  style={`background-color: ${color.hex}`}
                ></div>
                <span>{color.name}</span>
              </div>
            </div>
          )}
          {size && (
            <div class="flex items-center space-x-2">
              <span>Talla:</span>
              <span class="font-medium">{size}</span>
            </div>
          )}
        </div>
      </div>
    )}
  </div>
</a>
